- const data = htmlWebpackPlugin.options.data
- const { pageTitle, navbarItems, footerItems } = data
+layout
  +layout__block('head')
    title= pageTitle

  +layout__block('header')
    +header({ navbarItems })

  +layout__block('content')
    main.main
      .bg
        +ar-responsive-box().bg__wrapper
          .bg__image
      .form-wrapper
        +sign-in

  +layout__block('footer')
    +footer({ footerItems })
    +footer-creative
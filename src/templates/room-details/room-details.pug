- const data = htmlWebpackPlugin.options.data
- const { pageTitle, comments } = data

+layout
  +layout__block('head')
    title= pageTitle

  +layout__block('header')
    +header

  +layout__block('content')
    main.main
      .illustrations
      section.details
        article.info
          +heading({ type: 'widget', text: 'сведения о номере' })
        article.diagram
          +heading({ type: 'widget', text: 'впечатления о номере' })
            +diagram()
        article.reviews-form
          +reviews(comments)
        article.rules
          +heading({ type: 'widget', text: 'правила' })
        article.cancel-terms
          +heading({ type: 'widget', text: 'отмена' })
    .card-wrapper
      +invoice-card

  +layout__block('footer')
    +footer

  +layout__block('footer-creative')
    +footer-creative
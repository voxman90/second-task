- const data = htmlWebpackPlugin.options.data
- const { title, checkboxList, checkboxRich, checkboxItems, bulletList } = data

+layout
  +layout__block('head')
    title= pageTitle

  +layout__block('header')
    .fe__logo
      +logo({ size: 'big', isColored: false, isSigned: false })

  +layout__block('content')
    .fe__wrapper
      .fe__content
        .fe__r-1
          .fe__r-1__c-1
            +field({ width: 'big', indent: 'middle' })
              +text-field({ name: 'email', placeholder: 'Email', labelText: 'text field', labelAppendix: 'default' })
            +field({ width: 'big', indent: 'middle' })
              +text-field({ name: 'text-field', labelText: 'text field', labelAppendix: 'hover / focus' }).js-text-field-focused
            +field({ width: 'big', indent: 'middle' })
              +dropdown-guests({ id: 'guests', name: 'guests', labelText: 'dropdown' }).js-auto-init
            +field({ width: 'big', indent: 'middle' })
              +label({ text: 'masked text field' })
                +input-date({ name: 'date' })
            +field({ width: 'big', indent: 'huge' })
              +dropdown-date({ name: 'dropdown-date-1st', labelArrival: 'date dropdown', labelDeparture: 'date dropdown' }).js-dropdown-date-1st
            +field({ width: 'big', indent: 'huge' })
              +dropdown-filter-date({ name: 'filter-date-1st', labelText: 'filter date dropdown' }).js-dropdown-filter-date-1st
            +field({ width: 'middle' })
              +label({ text: 'subscription text field' })
                +subscription-field({ name: 'subscr-field-1st', placeholder: 'Email' })
          .fe__r-1__c-2
            .fe__m-40.fe__w-222
              +fieldset({ legend: 'checkbox buttons', name: 'checkbox-buttons' })
                +checkbox-list({ items: checkboxItems })
            .fe__m-40.fe__w-222
              +label({ text: 'radio buttons', hasLargePadding: true })
              .fe__flex-box
                +radio-button({ name: 'sex', value: 'man', checked: true, text: 'Мужчина' })
                +radio-button({ name: 'sex', value: 'women', text: 'Женщина' })
            .fe__m-40.fe__w-270
              +label({ text: 'toggle', hasLargePadding: true })
                .fe__m-10
                  +toggle({ name: 'spec', value: 'first', checked: true, text: 'Получать спецпредложения' })
                +toggle({ name: 'spec', value: 'second', text: 'Получать спецпредложения' })
            .fe__m-40
              +label({ text: 'like button', hasLargePadding: true })
              .fe__like-buttons
                +like-button({ name: 'like-btn-1st', count: 2 })(class='js-auto-init')
                +like-button({ name: 'like-btn-2nd', count: 12, checked: true })(class='js-auto-init')
            +label({ text: 'rate button', hasLargePadding: true })
              .fe__rate-buttons
                +rate-button({ amount: 5, filled: 5, name: 'rate-button-1st' })(class='js-auto-init')
                +rate-button({ amount: 5, filled: 4, name: 'rate-button-2nd' })(class='js-auto-init')
          .fe__r-1__c-3
            +field({ indent: 'huge' })
              +range-slider({ labelText: 'range slider'}).js-auto-init
            +fieldset({ legend: 'buttons' })
              +field({ indent: 'big' })
                +button-short({ text: 'click me', isFilled: true })
                .fe__plug
                +button-short({ text: 'click me', isFilled: true })
              +field({ indent: 'big' })
                +button-short({ text: 'click me', isBordered: true })
                .fe__plug
                +button-short({ text: 'click me', isBordered: true })
              +field({ indent: 'big' })
                +button({ text: 'click me' })
                .fe__plug
                +button({ text: 'click me' })
              +field({ width: 'big', indent: 'huge' })
                +button-long({ text: 'перейти к оплате', isArrowed: true })
            +fieldset({ legend: 'pagination' })
              +pagination()(class = 'js-auto-init')
        .fe__r-2
          .fe__r-2__c-1
            .fe__m-20
              +dropdown-facilities({ id: 'facilities', name: 'facilities', labelText: 'dropdown', labelAppendix: 'default' })(class='js-dropdown-facilities-1st')
            .fe__m-20
              +dropdown-facilities({ id: 'facilities2', name: 'facilities2', labelText: 'dropdown', labelAppendix: 'expanded' })(class='js-dropdown-facilities-2nd')
          .fe__r-2__c-2
            +dropdown-guests({ id: 'guests2', name: 'guests2', labelText: 'dropdown' })(class='js-dropdown-guests-1st')
          .fe__r-2__c-3
            +dropdown-guests({ id: 'guests3', name: 'guests3', labelText: 'dropdown' })(class='js-dropdown-guests-2nd')
        .fe__r-3
          .fe__r-3__c-1
            .fe__m-20.fe__w-266
              +expandable-list('expandable checkbox list').js-auto-init
                +checkbox-list({ items: checkboxList })
            .fe__m-20.fe__w-266
              +expandable-list('expandable checkbox list').js-expandable-list-2nd
                +checkbox-list({ items: checkboxList })
          .fe__r-3__c-2
            +fieldset({ legend: 'rich checkbox buttons' })
              +checkbox-list({ items: checkboxRich, isRich: true })
          .fe__r-3__c-3
            +label({ text: 'bullet list', hasLargePadding: true })
              +bullet-list(bulletList)
        .fe__r-4
          .fe__r-4__c-1
            +icon-item({ name: 'insert_emoticon', headline: 'Комфорт', descr: 'Шумопоглощающие стены' })
            +icon-item({ name: 'location_city', headline: 'Удобство', descr: 'Окно в каждой из спален' })
          .fe__r-4__c-2
            +comment({ img: 'user-001-w128.jpg', date: '5 дней назад', nickname: 'Мурад Сарафанов', value: '11', message: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.' })

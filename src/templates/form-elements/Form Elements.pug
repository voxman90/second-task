                        +dropdown-facilities("dropdown-facilities-001", "DROPDOWN", "DEFAULT")
                        +dropdown-facilities("dropdown-facilities-001", "DROPDOWN", "EXPANDED")
                    .form-elements__block_3
                        +expandable-list("sdfsdf")

- const data = htmlWebpackPlugin.options.data
- const { pageTitle, navbarItems, footerItems } = data
doctype html
html
  head
    meta(charset='UTF-8')
    title= pageTitle
  body
    .hf
      .hf__logo
        +logo({ size: 'big', isColored: false, isSigned: false })
      .hf__wrapper
        .hf__header
          +header({ navbarItems })
        .hf__header-reg
          +header({ navbarItems })
        .hf__footer
          +footer({ footerItems })
        .hf__footer-creative-wrapper
          +footer-creative()(class='hf__footer-creative')

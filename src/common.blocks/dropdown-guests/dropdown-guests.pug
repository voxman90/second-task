mixin dropdown-guests(name, left, right='')
    - var args = {
    -    haveButtons: true,
    -    left: left,
    -    right: right,
    -    name: name,
    -    value: 'Сколько гостей',
    -    options: {'взрослые' : 0, 'дети' : 0, 'младенцы' : 0}
    - }
    +dropdown(args).dropdown-guests.js-dropdown-guests
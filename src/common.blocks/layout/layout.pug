mixin layout()
  - const blocks = {}

  mixin layout__block(name)
    - blocks[name] = block

  - block()

  doctype html
  html(lang='ru')
    head
      meta(charset='UTF-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      +favicon
      if blocks.head
        - blocks.head()
    body
      .layout__wrapper
        if blocks.header
          .layout__header
            - blocks.header()
        if blocks.content
          .layout__content
            - blocks.content()
        if blocks.footer
          .layout__footer
            - blocks.footer()

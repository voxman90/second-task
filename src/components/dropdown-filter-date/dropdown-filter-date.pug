mixin dropdown-filter-date(args)
  - const { labelText: text, name = 'filter-date' } = args
  .dropdown-filter-date.js-dropdown-filter-date&attributes(attributes)
    .dropdown-filter-date__head.js-dropdown-filter-date__head
      +label({ text })
        input(class='dropdown-filter-date__readout js-dropdown-filter-date__readout', placeholder='ДД мес - ДД мес', readonly=true)
      .dropdown-filter-date__icon.js-dropdown-filter-date__icon
        +icon({ name: 'expand_more' })
      .dropdown-fileter-date__inputs
        input(class='dropdown-filter-date__input js-dropdown-filter-date__arrival', name='arrival', type='date', tabindex='-1')
        input(class='dropdown-filter-date__input js-dropdown-filter-date__departure', name='departure', type='date', tabindex='-1')
    .dropdown-filter-date__bar.js-dropdown-filter-date__bar.dropdown-filter-date__bar_hidden
      +calendar().js-dropdown-filter-date__calendar

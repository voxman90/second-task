-
  const hamburgerDefault = {
    isLoggedIn: false,
    menuItems: [
      { 'text': 'О нас', 'href': '#about' },
      { 'text': 'Услуги', 'href': '#services', 'isExpandable': true,
        'submenuItems': [
          { 'text': 'Услуги', 'href': '#services' },
          { 'text': 'Услуги', 'href': '#services' },
          { 'text': 'Услуги', 'href': '#services' },
        ]
      },
      { 'text': 'Вакансии', 'href': '#vacancies' },
      { 'text': 'Новости', 'href': '#news' },
      { 'text': 'Соглашения', 'href': '#agreements', 'isExpandable': true,
        'submenuItems': [
          { 'text': 'Соглашения', 'href': '#agreements' },
          { 'text': 'Соглашения', 'href': '#agreements' },
        ]
      }
    ],
  }

mixin hamburger(args = hamburgerDefault)
  - const { isLoggedIn, menuItems } = args
  nav(class = 'hamburger', role = 'navigation')&attributes(attributes)
    +hamburger__trigger()
      ul(class = 'hamburger__menu')
        each item in menuItems
          - const { isExpandable = false } = item
            p= 1
          if isExpandable
            +hamburger__expandable-list(item)
          else
            +hamburger__item(item)
        +hamburger__footer(isLoggedIn)

mixin hamburger__trigger()
  div(
    class='hamburger__trigger',
    role='button',
    tabindex='0',
    aria-label='hamburger-main-trigger',
  )
    +icon({ name: 'menu' })(class='hamburger__icon')

mixin hamburger__expandable-list(args)
  - const { href, text, title = null, submenuItems = [] } = args
  li(class='hamburger__expandable-list')
    .hamburger__expandable-list-header
      +link(args)(class='hamburger__expandable-list-link')
      div(
        class='hamburger__expandable-list-trigger',
        role='button',
        tabindex='0',
        aria-label=text,
      )
        +icon({ name: 'expand_more' })(class = 'hamburger__expandable-list-icon')
    ul(class = 'hamburger__expandable-list-container')
      each item in submenuItems
        +hamburger__item(item)

mixin hamburger__item(args = {})
  li
    +link(args)(class = 'hamburger__link')

mixin hamburger__footer(isloggedIn = false)
  if isloggedIn
    p= 'placeholder'
  else
    +hamburger__buttons()

mixin hamburger__buttons()
  .hamburger__buttons
    +button-short({ name: 'button-signin', text: 'войти', isBordered: true })
    +button-long({ name: 'button-signup', text: 'зарегистрироваться', isArrowed: false })

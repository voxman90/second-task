mixin expandable-list(heading)
  div(class='expandable-list js-expandable-list')&attributes(attributes)
    .expandable-list__head
      h3.expandable-list__heading= heading
      div(class='expandable-list__trigger js-expandable-list__trigger', role='button', tabindex='0')
        +icon({ name: 'expand_more' })
    .expandable-list__body.js-expandable-list__body
      if block
        block

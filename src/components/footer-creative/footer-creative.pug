mixin footer-creative()
  footer.footer-creative
    .footer-creative__wrapper
      a(target='_self', href='/')
        +logo({ size: 'small', isColored: true, isSigned: true })(class='js-auto-init')
      .footer-creative__copyright
        +copyright({ year: 2018, isWrapNormal: true })
      .footer-creative__social-follow
        +social-follow

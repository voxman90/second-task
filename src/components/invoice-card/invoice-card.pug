mixin invoice-card(args = {})
  - const { isLux = true } = args

  section.invoice-card.js-invoice-card&attributes(attributes)
    +frame
      form(class='invoice-card__form', name='invoice-card')
        .invoice-card__heading-wrapper
          +hotel-room-heading({ isLux })
        +field({ width: 'big', indent: 'middle' })
          +dropdown-date({ name: 'date', labelArrival: 'прибытие', labelDeparture: 'выезд' })
        +field({ width: 'big', indent: 'middle' })
          +dropdown-guests({ id: 'invoice-card-guests', name: 'guests', labelText: 'гости' })
        +invoice-card__account
        +field({ width: 'big' })
          +button-long({ text: 'забронировать', type: 'submit', isFilled: true, isArrowed: true })

mixin invoice-card__account()
  .invoice-card__account
    +field({ width: 'big', indent: 'tiny' })
      .invoice-card__account-line
        .js-invoice-card__gross-product
        .invoice-card__gross.js-invoice-card__gross= '9 999 999'
    +field({ width: 'big', indent: 'tiny' })
      .invoice-card__account-line
        .invoice-card__service
          | #{'Сбор за услуги: скидка '}
          span.invoice-card__discount.js-invoice-card__discount= '9 999 999'
          span.invoice-card__service-tooltip.js-invoice-card__service-tooltip
        .invoice-card__service-price.js-invoice-card__service-price= '9 999 999'
    +field({ width: 'big', indent: 'middle' })
      .invoice-card__account-line
        .invoice-card__extra
          | Сбор за доп. услуги
          span.invoice-card__extra-tooltip.js-invoice-card__extra-tooltip
        .invoice-card__extra-price.js-invoice-card__extra-price= '9 999 999'
    +field({ width: 'big', indent: 'middle' })
      .invoice-card__final
        | Итого
        span.invoice-card__dashed-border
        span.invoice-card__final-price.js-invoice-card__final-price= '9 999 999'

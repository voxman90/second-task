mixin header(args)
  header.header
    .header__wrapper
      a(class='header__logo', target='_self', href='#')
        +logo({ size: 'small', isColored: true, isSigned: true })(class='js-auto-init')
      .header__navbar
        +navbar(args)(aria-label='main', class='js-auto-init')
      .header__navbar
        +hamburger(args)
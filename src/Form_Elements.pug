doctype html
html
    head
        meta(charset="UTF-8")
        title Form Elements
    body
        include project/input-text/input-text.pug
        +input-text("textFirst", "Email")
        br
        include project/dropdown/dropdown.pug
        +dropdown-guest()
        br
        include project/checkbox/checkbox-custom.pug
        +checkbox-custom("smoke", "smoke", "Можно курить")
        +checkbox-custom("animal", "animal", "Можно с питомцами")
        +checkbox-custom("paty", "paty", "Можно пригласить гостей (до 10 человек)")
        include project/radio-button/radio-button.pug
        div(style="display: flex; justify-content: flex-start;")
          div
            +radio-button-custom("gender", "male", "Мужчина")
          div(style="margin-left: 20px;")
            +radio-button-custom("gender", "female", "Женщина")
        include project/toggle/toggle.pug
        +toggle-custom("sale", "sale", "Получать спецпредложения")
        +toggle-custom("saleTwo", "saleTwo", "Получать спецпредложения")
        include project/button/button-custom.pug
        +button-custom("buttonTest")
        br
        +button-custom("buttonTest", "Button", "Click me", true, false)
        br
        +button-custom("buttonTest", "Button", "Click me", false, false)
        include project/date-dropdown/date-dropdown.pug
        +date-dropdown
        include project/checkbox-list/checkbox-list.pug
        hr
        br
        +checkbox-list("expandable checkbox list")
          +checkbox-custom("smoke", "smoke", "Можно курить")
          +checkbox-custom("animal", "animal", "Можно с питомцами")
          +checkbox-custom("paty", "paty", "Можно пригласить гостей (до 10 человек)")
        hr
        br
        +button-custom("buttonTest", "Button", "Перейти к оплате", false, false, true)
        br
        +input-text(masked, "ДД.ММ.ГГГГ", leftLabel = "masked text field", rightLabel = "", isMasked = true)
        br
        hr
        br
        include project/account-registration/account-registration.pug
        +account-registration
